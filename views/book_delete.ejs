<%- include('layout') %>

<h1><%= title %>: <%= book.title %></h1>

<% if (bookInstances.length) { %>
  <p><strong>Delete the following instances before attempting to delete this book.</strong></p>
  <div style="margin-left:20px;margin-top:20px">
    <h4>Book Instances</h4>
    <dl>
      <% bookInstances.forEach(function(instance) { %>
        <dt>
          <a href="<%= instance.url %>"><%= instance.status %></a>
        </dt>
        <dd><%= instance.due_back %></dd>
      <% }); %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this Book?</p>

  <form method="POST">
    <div class="form-group">
      <input id="bookid" class="form-control" type="hidden" name="bookid" value="<%= book._id %>">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>
